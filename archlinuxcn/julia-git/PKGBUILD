            USE_SYSTEM_LIBSSH2=1
            USE_SYSTEM_NGHTTP2=1
            USE_SYSTEM_CURL=1
            USE_SYSTEM_LIBGIT2=1
            USE_SYSTEM_PATCHELF=1
            USE_SYSTEM_ZLIB=1
            USE_SYSTEM_P7ZIP=1
            USE_SYSTEM_LLD=1
            USE_INTEL_JITEVENTS=0
            USE_LLVM_SHLIB=1
