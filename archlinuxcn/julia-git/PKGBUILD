            USE_SYSTEM_BLAS=1
            USE_SYSTEM_LAPACK=1
            USE_SYSTEM_GMP=1
            USE_SYSTEM_MPFR=1
            USE_SYSTEM_LIBSUITESPARSE=1
            USE_SYSTEM_UTF8PROC=1
